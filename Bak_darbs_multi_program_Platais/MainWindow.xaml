<Window x:Class="Bak_darbs_multi_program_Platais.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bak_darbs_multi_program_Platais"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="800">
    <Grid>
        <!-- Profile-->
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Label Content="Profile:" Margin="5" VerticalAlignment="Top" HorizontalAlignment="Right" />
            <ComboBox x:Name="ProfileCombobox" Width="200" Margin="5" SelectionChanged="ProfileCombobox_SelectionChanged"></ComboBox>
        </StackPanel>

        <ScrollViewer Margin="10,50,10,10" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <WrapPanel x:Name="ProgramsWrapPanel" AllowDrop="True" Drop="ProgramsWrapPanel_Drop">
                <!-- program tiles added here in code -->
                <Button x:Name="AddEmptyButton" Content="+" FontSize="40" Width="150" Height="100" Margin="10" Click="AddEmptyButton_Click" />
            </WrapPanel>
        </ScrollViewer>
        <Button x:Name="LaunchAllButton" Content="Launch All" HorizontalAlignment="Left" Margin="20,20,20,50" VerticalAlignment="Bottom" Width="200" Height="150" Click="LaunchAllButton_Click"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,15">
            <Button x:Name="ChangeHotkeyButton" Content="Set Hotkey" Width="90" Height="20" Click="ChangeHotkeyButton_Click"></Button>
            <Label x:Name="HotkeyLabel" AutomationProperties.Name="Current: Ctrl + Q" VerticalAlignment="Center" Margin="10,0,0,0"></Label>
        </StackPanel>



    </Grid>
</Window>
